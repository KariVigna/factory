@{
    Layout = "_Layout";
}

@using Factory.Models;

<h1>Dr. Sillystringz Factory</h1>

<hr>
<br>
<h4>Machines</h4>
@if (Model["machines"].Length == 0)
{
    <p>No machines have been added yet!</p>
}

    @foreach (Machine machine in Model["machines"])
    {
        <p>@Html.ActionLink(@machine.Description, "Details", "Machines", new { id = @machine.MachineId })</p>
    }
<br>
<p>@Html.ActionLink("Add a Machine", "Create", "Machines")</p>
<p>@Html.ActionLink("Manage Machines", "Index", "Machines")</p>

<br>
<h4>Engineers | Hire Date</h4>
@if (Model["engineers"].Length == 0)
{
    <p>No engineers have been added yet!</p>
}
<ul>
    @foreach (Engineer engineer in Model["engineers"])
    {
        <li>@Html.ActionLink(@engineer.Name, "Details", "Engineers", new { id = @engineer.EngineerId }) | @engineer.HireDate</li>
    }
</ul>
<br>
<p>@Html.ActionLink("Manage Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("Add an Engineer", "Create", "Engineers")</p>
